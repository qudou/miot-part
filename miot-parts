#!/bin/sh
### BEGIN INIT INFO
# Provides:          miot-parts
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop miot-parts server
### END INIT INFO

DEAMON=/home/pi/miot-parts/miot-parts.js
LOG=/home/pi/miot-parts/miot-parts.log
PID=/home/pi/miot-parts/miot-parts.pid

export PATH=$PATH:/usr/local/bin
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules

case "$1" in
 start)
  su -c "forever start -l ${LOG} --pidFile ${PID} -a ${DEAMON}" - pi
  ;;
 stop)
  su -c "forever stop --pidFile ${PID} ${DEAMON}" - pi
  ;;
 restart)
  su -c "forever restart -l ${LOG} --pidFile ${PID} -a ${DEAMON}" - pi
  ;;
  *)
  echo "Usage: /etc.init.d/miot-parts {start|stop|restart}"
  exit 1
  ;;
esac
